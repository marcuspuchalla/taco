      "diagnosticNotation": "h'FFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF...'",
      "shouldSucceed": true,
      "complexity": "simple",
      "tags": [
        "cardano",
        "ed25519",
        "signature",
        "cryptography"
      ],
      "cardanoRelevance": "Ed25519 signatures are 64 bytes"
