{
  "category": "byte-strings",
  "description": "RFC 8949 Major Type 2: Byte String Tests",
  "version": "1.0",
  "testCases": [
    {
      "id": "bytes-000",
      "category": "byte-strings",
      "description": "Empty byte string",
      "inputHex": "40",
      "expectedOutput": "",
      "diagnosticNotation": "h''",
      "shouldSucceed": true,
      "complexity": "trivial",
      "tags": [
        "empty",
        "boundary"
      ],
      "cardanoRelevance": "Empty asset names, empty metadata fields"
    },
    {
      "id": "bytes-001",
      "category": "byte-strings",
      "description": "Single byte: 0x00",
      "inputHex": "4100",
      "expectedOutput": "00",
      "diagnosticNotation": "h'00'",
      "shouldSucceed": true,
      "complexity": "trivial",
      "tags": [
        "single-byte"
      ]
    },
    {
      "id": "bytes-002",
      "category": "byte-strings",
      "description": "Single byte: 0xFF",
      "inputHex": "41ff",
      "expectedOutput": "ff",
      "diagnosticNotation": "h'FF'",
      "shouldSucceed": true,
      "complexity": "trivial",
      "tags": [
        "single-byte"
      ]
    },
    {
      "id": "bytes-004",
      "category": "byte-strings",
      "description": "4 bytes: 0x01020304",
      "inputHex": "4401020304",
      "expectedOutput": "01020304",
      "diagnosticNotation": "h'01020304'",
      "shouldSucceed": true,
      "complexity": "simple",
      "tags": [
        "short"
      ]
    },
    {
      "id": "bytes-032-ed25519-pubkey",
      "category": "byte-strings",
      "description": "Ed25519 public key (32 bytes)",
      "inputHex": "5820000102030405060708090a0b0c0d0e0f101112131415161718191a1b1c1d1e1f",
      "expectedOutput": "000102030405060708090a0b0c0d0e0f101112131415161718191a1b1c1d1e1f",
      "diagnosticNotation": "h'000102030405060708090a0b0c0d0e0f101112131415161718191a1b1c1d1e1f'",
      "shouldSucceed": true,
      "complexity": "simple",
      "tags": [
        "cardano",
        "ed25519",
        "pubkey"
      ],
      "cardanoRelevance": "Ed25519 public keys are 32 bytes"
    },
    {
      "id": "bytes-064-ed25519-signature",
      "category": "byte-strings",
      "description": "Ed25519 signature (64 bytes)",
      "inputHex": "5840000102030405060708090a0b0c0d0e0f101112131415161718191a1b1c1d1e1f202122232425262728292a2b2c2d2e2f303132333435363738393a3b3c3d3e3f",
      "expectedOutput": "000102030405060708090a0b0c0d0e0f101112131415161718191a1b1c1d1e1f202122232425262728292a2b2c2d2e2f303132333435363738393a3b3c3d3e3f",
      "diagnosticNotation": "h'0001020304050607...'",
      "shouldSucceed": true,
      "complexity": "simple",
      "tags": [
        "cardano",
        "ed25519",
        "signature"
      ],
      "cardanoRelevance": "Ed25519 signatures are 64 bytes"
    },
    {
      "id": "bytes-032-tx-hash",
      "category": "byte-strings",
      "description": "Transaction hash (32 bytes)",
      "inputHex": "5820abababababababababababababababababababababababababababababababab",
      "expectedOutput": "abababababababababababababababababababababababababababababababab",
      "diagnosticNotation": "h'ABABABABABABABABABABABABABABABABABABABABABABABABABABABABABABABAB'",
      "shouldSucceed": true,
      "complexity": "simple",
      "tags": [
        "cardano",
        "hash",
        "blake2b"
      ],
      "cardanoRelevance": "Transaction hashes are Blake2b-256 (32 bytes)"
    },
    {
      "id": "bytes-028-policy-id",
      "category": "byte-strings",
      "description": "Policy ID (28 bytes)",
      "inputHex": "581ccdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcd",
      "expectedOutput": "cdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcdcd",
      "diagnosticNotation": "h'CDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCDCD'",
      "shouldSucceed": true,
      "complexity": "simple",
      "tags": [
        "cardano",
        "policy-id",
        "native-asset"
      ],
      "cardanoRelevance": "Policy IDs are 28 bytes"
    },
    {
      "id": "bytes-032-asset-name-max",
      "category": "byte-strings",
      "description": "Asset name at max length (32 bytes)",
      "inputHex": "58204141414141414141414141414141414141414141414141414141414141414141",
      "expectedOutput": "4141414141414141414141414141414141414141414141414141414141414141",
      "diagnosticNotation": "h'4141414141414141414141414141414141414141414141414141414141414141'",
      "shouldSucceed": true,
      "complexity": "simple",
      "tags": [
        "cardano",
        "asset-name",
        "boundary"
      ],
      "cardanoRelevance": "Asset names can be 0-32 bytes"
    },
    {
      "id": "bytes-255",
      "category": "byte-strings",
      "description": "255 bytes (maximum for 1-byte length)",
      "inputHex": "",
      "expectedOutput": "",
      "diagnosticNotation": "h'FFFFFFFFFFFFFFFF...'",
      "shouldSucceed": true,
      "complexity": "moderate",
      "tags": [
        "boundary",
        "long"
      ]
    },
    {
      "id": "bytes-256",
      "category": "byte-strings",
      "description": "256 bytes (minimum for 2-byte length)",
      "inputHex": "",
      "expectedOutput": "",
      "diagnosticNotation": "h'0000000000000000...'",
      "shouldSucceed": true,
      "complexity": "moderate",
      "tags": [
        "boundary",
        "long"
      ]
    },
    {
      "id": "bytes-indefinite-simple",
      "category": "byte-strings",
      "description": "Indefinite-length byte string with 2 chunks",
      "inputHex": "5f42010243030405ff",
      "expectedOutput": "0102030405",
      "diagnosticNotation": "(_ h'0102', h'030405')",
      "shouldSucceed": true,
      "complexity": "moderate",
      "tags": [
        "indefinite",
        "chunked"
      ],
      "notes": "Indefinite-length not allowed in canonical encoding"
    },
    {
      "id": "bytes-truncated",
      "category": "byte-strings",
      "description": "Truncated: Length 4 but only 2 bytes provided",
      "inputHex": "440102",
      "expectedOutput": null,
      "diagnosticNotation": "<truncated>",
      "shouldSucceed": false,
      "errorType": "truncated",
      "complexity": "simple",
      "tags": [
        "malformed",
        "negative-test",
        "truncated"
      ]
    },
    {
      "id": "bytes-nested-indefinite",
      "category": "byte-strings",
      "description": "Invalid: Nested indefinite byte strings",
      "inputHex": "5f5f4101ff42020 3ff",
      "expectedOutput": null,
      "diagnosticNotation": "<invalid>",
      "shouldSucceed": false,
      "errorType": "nested-indefinite",
      "complexity": "moderate",
      "tags": [
        "malformed",
        "negative-test"
      ],
      "notes": "Indefinite byte strings cannot contain indefinite chunks"
    }
  ]
}